<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>
        <item name="android:spinnerDropDownItemStyle">
            @style/spinnerDropDownItemStyle
        </item>
        <item name="buttonStyle">@style/buttonStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>
        <item name="android:spinnerDropDownItemStyle">
            @style/spinnerDropDownItemStyle
        </item>
    </style>

    <style name="AppTheme.NoBackground">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>
        <item name="android:spinnerDropDownItemStyle">
            @style/spinnerDropDownItemStyle
        </item>
        <item name="elevation">0dp</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Spinner style -->
    <style name="spinnerItemStyle">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/avenir_regular</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Spinner style drop down style-->
    <style name="spinnerDropDownItemStyle">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Navigation drawer layout style -->
    <style name="navItemStyle">
        <item name="android:fontFamily">@font/avenir_regular</item>
    </style>

    <!-- Button style -->
    <style name="buttonStyle">
        <item name="android:textSize">@dimen/text_size_medium_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:fontFamily">@font/avenir_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:foreground">@drawable/ripple_effect</item>
        <item name="android:background">@drawable/profile_and_string_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="chooseQuestionButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:fontFamily">@font/avenir_regular</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:foreground">@drawable/ripple_effect</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="largeTitleStyle">
        <item name="android:fontFamily">@font/avenir_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/text_margin_large</item>
        <item name="android:textSize">@dimen/text_size_medium_large</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
