<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_margin_content"
    tools:context="xevo.xevo1.AnswerQuestion.ReadQuestion">

    <fragment
        android:id="@+id/question_title"
        android:name="xevo.xevo1.ProfileAndString"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--android:layout_height="80dp"-->

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/question_type"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/primaryTextDark"
        android:fontFamily="@font/avenir_regular"
        android:lineSpacingExtra="@dimen/text_size_very_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_title"
        android:textStyle="bold"
        android:layout_margin="@dimen/text_margin"
        android:scrollbars="vertical"
        android:textAlignment="textStart" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/question_details"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/primaryTextDark"
        android:fontFamily="@font/avenir_regular"
        android:lineSpacingExtra="@dimen/text_size_very_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_type"
        android:layout_margin="@dimen/text_margin"
        android:scrollbars="vertical"
        android:textAlignment="textStart" />

    <Button
        android:layout_above="@+id/accept_button"
        style="@style/buttonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/accept_button"
        android:text="@string/rejection" />

    <Button
        android:theme="@style/buttonStyle"
        android:id="@+id/accept_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/avenir_regular"
        android:textColor="@android:color/white"
        android:text="Accept"
        android:textSize="@dimen/text_size_medium_small"
        android:padding="10dp"
        android:foreground="@drawable/ripple_effect"
        android:background="@drawable/profile_and_string_bg"
        android:elevation="2dp"/>

